<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:OutputWPFModels="clr-namespace:OutputWPF.OutputWPFModels;assembly=OutputWPF" x:Class="Mosquito.MainWindow"
        mc:Ignorable="d"
        Title="Колькулятор Стоимости москитных сеток " Height="536" Width="565">
    <Grid x:Name="MailGrid" Margin="0,0,2,0">
        <!-- height elements -->
        <Label x:Name="HeighLabel" Content="Ширина:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="HeighTextBox" HorizontalAlignment="Left" Height="23" Margin="150,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyUp="HeighTextBox_KeyUp"/>
        <Label x:Name="AdditionalHeighLabel" Content="мм." HorizontalAlignment="Left" Margin="270,11,0,0" VerticalAlignment="Top"/>

        <!-- width elements -->
        <Label Content="Высота:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="WeigthTextBox" HorizontalAlignment="Left" Height="23" Margin="150,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyUp="WeigthTextBox_KeyUp"/>
        <Label Content="мм." HorizontalAlignment="Left" Margin="270,40,0,0" VerticalAlignment="Top"/>

        <!-- profile elements -->
        <Label Content="Профиль:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ProfileComboBox" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top" Width="250" />

        <!-- crossprofile elements -->
        <Label Content="Профиль поперечины:" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CrossProfileComboBox" HorizontalAlignment="Left" Margin="150,110,0,0" VerticalAlignment="Top" Width="250"/>

        <!-- net elements -->
        <Label Content="Сетка:" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="NetComboBox" HorizontalAlignment="Left" Margin="150,140,0,0" VerticalAlignment="Top" Width="250"/>

        <!-- cord elements -->
        <Label Content="Шнур:" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="CordComboBox" HorizontalAlignment="Left" Margin="150,170,0,0" VerticalAlignment="Top" Width="250"/>

        <!-- work price elements -->
        <Label Content="Работа:" HorizontalAlignment="Left" Margin="16,200,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="WorkPriceTextBox" HorizontalAlignment="Left" Height="23" Margin="150,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="270,200,0,0" VerticalAlignment="Top"/>

        <!-- trash price elements -->
        <Label Content="Отходы:" HorizontalAlignment="Left" Margin="16,230,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TrashPriceTextBox" HorizontalAlignment="Left" Height="23" Margin="150,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="270,230,0,0" VerticalAlignment="Top"/>

        <!-- other pending elements -->
        <Label Content="Прочие расходы:" HorizontalAlignment="Left" Margin="16,260,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OtherPendingTextBox" HorizontalAlignment="Left" Height="23" Margin="150,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="270,260,0,0" VerticalAlignment="Top"/>

        <Label Content="Итого:" HorizontalAlignment="Left" Margin="322,10,0,0" VerticalAlignment="Top" FontWeight="Bold" />
        <TextBox x:Name="TotalPriceTextBox" HorizontalAlignment="Left" Height="23" Margin="375,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="497,10,0,0" VerticalAlignment="Top"/>

        <!-- extra detail elements -->
        <StackPanel x:Name="ExtraDetailPanel" HorizontalAlignment="Left" Height="94" Margin="0,290,0,0" VerticalAlignment="Top" Width="517"/>
        <Grid HorizontalAlignment="Left" Height="51" Margin="304,0,0,0" VerticalAlignment="Top" Width="251" Background="Lavender" Panel.ZIndex="-1"/>
    </Grid>
</Window>
