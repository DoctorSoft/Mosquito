<Window x:Class="Mosquito.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="Колькулятор Стоимости москитных сеток " Height="536" Width="525">
    <Grid Name="MailGrid">
        <!-- height elements -->
        <Label Name="HeighLabel" Content="Ширина:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox Name="HeighTextBox" HorizontalAlignment="Left" Height="23" Margin="150,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyUp="HeighTextBox_KeyUp"/>
        <Label Name="AdditionalHeighLabel" Content="мм." HorizontalAlignment="Left" Margin="270,11,0,0" VerticalAlignment="Top"/>

        <!-- width elements -->
        <Label Content="Высота:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox Name="WeigthTextBox" HorizontalAlignment="Left" Height="23" Margin="150,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyUp="WeigthTextBox_KeyUp"/>
        <Label Content="мм." HorizontalAlignment="Left" Margin="270,40,0,0" VerticalAlignment="Top"/>

        <!-- profile elements -->
        <Label Content="Профиль:" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="ProfileComboBox" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top" Width="250"/>

        <!-- crossprofile elements -->
        <Label Content="Профиль поперечины:" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="CrossProfileComboBox" HorizontalAlignment="Left" Margin="150,110,0,0" VerticalAlignment="Top" Width="250"/>

        <!-- net elements -->
        <Label Content="Сетка:" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="NetComboBox" HorizontalAlignment="Left" Margin="150,140,0,0" VerticalAlignment="Top" Width="250"/>

        <!-- cord elements -->
        <Label Content="Шнур:" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="CordComboBox" HorizontalAlignment="Left" Margin="150,170,0,0" VerticalAlignment="Top" Width="250"/>

        <!-- work price elements -->
        <Label Content="Работа:" HorizontalAlignment="Left" Margin="16,200,0,0" VerticalAlignment="Top"/>
        <TextBox Name="WorkPriceTextBox" HorizontalAlignment="Left" Height="23" Margin="150,200,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="270,200,0,0" VerticalAlignment="Top"/>

        <!-- trash price elements -->
        <Label Content="Отходы:" HorizontalAlignment="Left" Margin="16,230,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TrashPriceTextBox" HorizontalAlignment="Left" Height="23" Margin="150,230,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="270,230,0,0" VerticalAlignment="Top"/>

        <!-- other pending elements -->
        <Label Content="Прочие расходы:" HorizontalAlignment="Left" Margin="16,260,0,0" VerticalAlignment="Top"/>
        <TextBox Name="OtherPendingTextBox" HorizontalAlignment="Left" Height="23" Margin="150,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="270,260,0,0" VerticalAlignment="Top"/>

        <!-- total price elements -->
        <Label Content="Итого:" HorizontalAlignment="Left" Margin="22,390,0,0" VerticalAlignment="Top" FontWeight="Bold" />
        <TextBox Name="TotalPriceTextBox" HorizontalAlignment="Left" Height="23" Margin="150,390,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Label Content="р." HorizontalAlignment="Left" Margin="279,390,0,0" VerticalAlignment="Top"/>

        <!-- extra detail elements -->
        <StackPanel Name="ExtraDetailPanel" HorizontalAlignment="Left" Height="94" Margin="0,290,0,0" VerticalAlignment="Top" Width="517"/>
    </Grid>
</Window>
